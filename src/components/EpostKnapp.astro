---
import {getSiteSettings} from '../scripts/getSettings';

const settings = await getSiteSettings();
---
{settings.showEmail === "ja" && (
<a href={`mailto:${settings.email}`}
   class="bg-white border border-blue-200 text-blue-600 px-8 py-4 rounded-full font-bold hover:bg-blue-50 transition flex items-center justify-center gap-2 whitespace-nowrap min-w-fit">
    <span>✉️</span>{settings.email}
</a>
    )}
