---
import {render} from "astro:content";

import TelefonKnapp from "./TelefonKnapp.astro";
import EpostKnapp from "./EpostKnapp.astro";
import WaveFromWhite from './WaveFromWhite.astro';

import {getActiveMessage} from '../scripts/activeMessage.js';
const activeMessage = await getActiveMessage();
// 3. Render Markdown-innholdet hvis en melding er aktiv
const rendered = activeMessage ? await render(activeMessage) : null;
const ActiveMessageContent = rendered?.Content;
---
<section id="forside" class="relative bg-white py-25 md:py-28 overflow-hidden md:pb-0">
    <div class="container mx-auto px-4 flex flex-col md:flex-row items-center gap-12 mb-32">
        <div class="flex-1 space-y-6 text-center md:text-left">
            <h1 class="text-4xl md:text-6xl font-extrabold text-slate-900 leading-tight">
                Tannhelse i <br/><span class="text-blue-600">trygge rammer</span>
            </h1>
            <p class="text-lg text-slate-600 max-w-xl mx-auto md:mx-0">
                Velkommen til Tenner og Trivsel i Armauer Hansens vei 11, Stavanger.
                Vi tilbyr moderne behandling med fokus på din komfort.
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
                <TelefonKnapp/>
                <EpostKnapp/>
            </div>

            {activeMessage && (
                <div class="bg-slate-900 p-8 rounded-2xl shadow-xl border border-green-100">
                        <h3 class="text-2xl font-bold mb-6 flex items-center gap-2 text-blue-600">
                            {activeMessage.data.title}
                        </h3>
                        {/* Vi bruker en 'prose' wrapper for å style Markdown-teksten (hvit tekst på mørk bakgrunn) */}
                        <div class="prose prose-invert max-w-none text-slate-300">
                            {ActiveMessageContent && <ActiveMessageContent />}
                        </div>
                    </div>
            )}

        </div>
        <div class="flex-1 w-full max-w-md md:max-w-xl lg:max-w-2xl min-w-[350px]">
            <div
                    class="rounded-2xl shadow-2xl overflow-hidden bg-blue-50 aspect-[16/10] flex items-center justify-center border border-slate-100">
                <img src="/hovedbilde.png" alt="Tenner og Trivsel"
                     class="w-full h-full object-cover object-center"/>
            </div>
        </div>
    </div>
    <WaveFromWhite />
</section>