---
import {getCollection} from 'astro:content';
import Layout from '../layouts/Layout.astro';
import Card from './Card.astro';
import { getSiteSettings } from '../scripts/getSettings';

// 1. Hent alle filene fra src/content/tjenester/
const allServices = await getCollection('tjenester');

// 2. Sorter dem alfabetisk basert på tittelen i frontmatter (nb = norsk)
const sortedServices = allServices.sort((a, b) =>
    a.data.title.localeCompare(b.data.title, 'nb')
);
const settings = await getSiteSettings();
---
<section id="tjenester" class="section-container bg-white">
    <div class="section-content">
        <div class="section-header section-header-centered bg-white/95 section-header-sticky">
            <h2 class="section-heading">Våre Tjenester</h2>
            <p class="section-intro">{settings.tjenesteTekst}</p>
            <div class="heading-accent"></div>
        </div>

        <div class="flex flex-col md:grid md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
            {sortedServices.map((service, index) => (
                    <Card
                            index={index}
                            title={service.data.title}
                            headerOffset="150px"
                            minHeight="250px"
                            centered={false}
                            isStack={true}
                            href={`/tjenester/${service.slug}`}
                    >
                        <p class="card-text line-clamp-3">
                            {service.data.ingress}
                        </p>
                    </Card>
            ))}
        </div>
    </div>
</section>