---
import {getCollection} from 'astro:content';
import Layout from '../layouts/Layout.astro';

// 1. Hent alle filene fra src/content/tjenester/
const allServices = await getCollection('tjenester');

// 2. Sorter dem alfabetisk basert på tittelen i frontmatter (nb = norsk)
const sortedServices = allServices.sort((a, b) =>
    a.data.title.localeCompare(b.data.title, 'nb')
);
---
<section id="tjenester" class="section-container bg-white">
    <div class="section-content">
        <div class="section-header bg-white/95 section-header-sticky">
            <h2 class="section-heading">Våre Tjenester</h2>
            <div class="heading-accent"></div>
        </div>

        <div class="flex flex-col md:grid md:grid-cols-2 lg:grid-cols-3 gap-6 md:gap-8">
            {sortedServices.map((service, index) => (
                    <div
                            style={`--card-index: ${index}; --header-offset: 140px;`}
                            class="stack-card card-base group min-h-[300px]"
                    >
                        <div class="card-accent-corner"></div>

                        <h3 class="card-title group-hover:text-blue-600">
                            <a href={`/tjenester/${service.slug}`}>{service.data.title}</a>
                        </h3>

                        <div class="flex-grow">
                            <p class="card-text line-clamp-3 mb-8">
                                {service.data.ingress}
                            </p>
                        </div>

                        <div class="card-link">
                            <a href={`/tjenester/${service.slug}`}>
                                Les mer <span class="ml-2 transition-transform group-hover:translate-x-1">→</span>
                            </a>
                        </div>

                        <div class="card-progress-bar"></div>
                    </div>
            ))}
        </div>
    </div>
</section>