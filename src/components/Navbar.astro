---
import TelefonKnapp from "./TelefonKnapp.astro";
const navLinks = [
    { name: 'Forside', href: '/', mobileHref: '/' },
    { name: 'Kontakt', href: '/#kontakt', mobileHref: '/#kontakt' },
    { name: 'Tjenester', href: '/#tjenester', mobileHref: '/tjenester' },
    { name: 'Om oss', href: '/#tannleger', mobileHref: '/tannleger' },
];

import {Image} from "astro:assets";
import logoImage from "../assets/tt-logo-2026.png";
---

<nav class="bg-brand-light border-b border-brand-border">
    <div class="layout-container">
        <div class="flex justify-between items-center h-20">
            <a href="/" class="flex items-center no-underline">
                <Image
                        src={logoImage}
                        alt="Tenner og Trivsel"
                        width={256}
                        class="h-16 w-auto object-contain"
                        loading="eager"
                />
            </a>

            <div class="hidden md:flex items-center gap-8 whitespace-nowrap">
                {navLinks.map(link => (
                        <a href={link.href}
                           data-nav-link
                           class="text-brand hover:text-brand-hover font-medium transition-colors">
                            {link.name}
                        </a>
                ))}
                <TelefonKnapp/>
            </div>

            <button id="menu-btn" class="md:hidden flex flex-col gap-1.5 p-2" aria-label="Meny">
                <span class="w-6 h-0.5 bg-brand-dark transition-all duration-300 origin-center"></span>
                <span class="w-6 h-0.5 bg-brand-dark transition-all duration-300"></span>
                <span class="w-6 h-0.5 bg-brand-dark transition-all duration-300 origin-center"></span>
            </button>
        </div>
    </div>

    <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-brand-light absolute w-full left-0 shadow-xl z-50">
        <div class="flex flex-col p-6 gap-4">
            {navLinks.map(link => (
                    <a href={link.mobileHref} class="text-lg font-medium text-brand hover:text-brand-hover py-2 mobile-link border-b border-brand-light last:border-0">                        {link.name}
                    </a>
            ))}
            <TelefonKnapp class="w-full"/>
        </div>
    </div>
</nav>

<script>
    import {initMobileMenu} from '../scripts/mobile-menu.js';
    import {initMenuHighlight} from '../scripts/menu-highlight.js';

    function init() {
        initMobileMenu();
        initMenuHighlight();
    }

    document.addEventListener('astro:page-load', init);
    init();
</script>