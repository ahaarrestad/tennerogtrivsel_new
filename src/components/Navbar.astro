---
import TelefonKnapp from "./TelefonKnapp.astro";
const navLinks = [
    {name: 'Forside', href: '/#forside'},
    {name: 'Kontakt', href: '/#kontakt'},
    {name: 'Tjenester', href: '/#tjenester'},
    {name: 'Om oss', href: '/#tannleger'},
];

import {Image} from "astro:assets";
import logoImage from "../assets/logo.png";
---

<nav class="bg-slate-50 border-b border-slate-100">
    <div class="container mx-auto px-4">
        <div class="flex justify-between items-center h-20">
            <a href="/" class="flex items-center gap-4 no-underline">
                <Image
                        src={logoImage}
                        alt="Tenner og Trivsel"
                        width={256}
                        height={256}
                        class="h-16 w-auto object-contain"
                        loading="eager"
                />

                <div class="flex flex-col justify-center leading-none whitespace-nowrap">
                    <span class="text-2xl font-black uppercase tracking-tighter text-brand">
                        Tenner
                    </span>
                    <span class="text-2xl font-black uppercase tracking-tighter text-brand">
                        & Trivsel
                    </span>
                </div>
            </a>

            <div class="hidden md:flex items-center gap-8 whitespace-nowrap">
                {navLinks.map(link => (
                        <a href={link.href}
                           data-nav-link
                           class="text-brand hover:text-brand-hover font-medium transition-colors">
                            {link.name}
                        </a>
                ))}
                <TelefonKnapp/>
            </div>

            <button id="menu-btn" class="md:hidden flex flex-col gap-1.5 p-2" aria-label="Meny">
                <span class="w-6 h-0.5 bg-brand-dark transition-all duration-300 origin-center"></span>
                <span class="w-6 h-0.5 bg-brand-dark transition-all duration-300"></span>
                <span class="w-6 h-0.5 bg-brand-dark transition-all duration-300 origin-center"></span>
            </button>
        </div>
    </div>

    <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-slate-50 absolute w-full left-0 shadow-xl">
        <div class="flex flex-col p-6 gap-4">
            {navLinks.map(link => (
                    <a href={link.href} class="text-lg font-medium text-brand hover:text-brand-hover py-2 mobile-link">
                        {link.name}
                    </a>
            ))}
            <TelefonKnapp/>
        </div>
    </div>
</nav>

<script>
    import {initMobileMenu} from '../scripts/mobile-menu.js';
    import {initMenuHighlight} from '../scripts/menu-highlight.js';

    initMobileMenu();
    initMenuHighlight();
</script>

<script is:inline>
    function updateHeaderHeight() {
        // Vi måler avstanden fra toppen av main til toppen av viewporten
        // for å vite nøyaktig hvor mye plass headeren tar.
        const main = document.querySelector('main');
        if (main) {
            const headerHeight = main.offsetTop;
            document.documentElement.style.setProperty('--nav-total-height', headerHeight + 'px');
        }
    }

    // Kjør ved oppstart og når vinduet endrer størrelse
    window.addEventListener('resize', updateHeaderHeight);
    window.addEventListener('load', updateHeaderHeight);

    // Siden du har en "melding" som kan forsvinne, observerer vi endringer i dokumentet
    const observer = new MutationObserver(updateHeaderHeight);
    observer.observe(document.body, {childList: true, subtree: true});
</script>