---
import Layout from "../layouts/Layout.astro";
import TelefonKnapp from "../components/TelefonKnapp.astro";
---

<Layout title="Siden ble ikke funnet | Tenner og Trivsel">
    <main class="relative min-h-[75vh] flex items-center justify-center overflow-hidden bg-white">

        {/* Myke bakgrunnsdetaljer for 친 unng친 at det blir for flatt */}
        <div class="absolute top-1/4 -left-20 w-72 h-72 bg-blue-50/50 rounded-full filter blur-3xl"></div>
        <div class="absolute bottom-1/4 -right-20 w-96 h-96 bg-slate-50 rounded-full filter blur-3xl"></div>

        <div class="container mx-auto px-6 relative z-10">
            <div class="max-w-2xl mx-auto text-center">

                {/* Erstatter 404 med et visuelt "hull i smilet" */}
                <div class="flex justify-center items-center mb-10">
                    <div class="text-7xl md:text-9xl font-black text-slate-200 flex items-center tracking-widest leading-none select-none">
                        <span>4</span>
                        <span class="text-blue-600 animate-bounce">0</span>
                        <span class="relative">
                            4
                            <div class="absolute -top-4 -right-4 w-8 h-8 md:w-12 md:h-12 bg-white rounded-full flex items-center justify-center">
                                <span class="text-2xl md:text-4xl text-blue-500">游붱</span>
                            </div>
                        </span>
                    </div>
                </div>

                <h2 class="text-2xl md:text-4xl font-bold text-slate-800 mb-6 italic">
                    Karies i systemet?
                </h2>

                <p class="text-lg text-slate-500 mb-20 max-w-md mx-auto leading-relaxed">
                    Denne siden har dessverre f친tt et <strong>alvorlig hull</strong>. Vi har pr칮vd med b친de sondering og r칮ntgen, men konklusjonen er at lenken m친 trekkes.
                </p>
                {/* Knappene ved siden av hverandre */}
                <div class="flex flex-col md:flex-row gap-4 justify-center items-center">

                    {/* Vi bruker md:max-w-max for 친 tvinge containeren til 친 krympe rundt innholdet */}
                    <div class="w-full md:w-auto md:max-w-max">
                        <a href="/"
                           class="bg-blue-600 text-white w-full md:w-44 py-4 rounded-full font-bold shadow-lg hover:bg-blue-700 transition flex items-center justify-center text-sm whitespace-nowrap">
                            Til forside
                        </a>
                    </div>

                    {/* Samme her for TelefonKnapp */}
                    <div class="w-full md:w-auto md:max-w-max [&_a]:w-full md:[&_a]:w-44 [&_a]:py-4 [&_a]:rounded-full [&_a]:text-sm [&_a]:flex [&_a]:items-center [&_a]:justify-center [&_a]:shadow-lg">
                        <TelefonKnapp/>
                    </div>
                </div>
            </div>
        </div>
    </main>
</Layout>