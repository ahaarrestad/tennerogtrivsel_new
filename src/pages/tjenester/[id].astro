---
import Layout from '../../layouts/Layout.astro';
import {getCollection} from 'astro:content';
import TelefonKnapp from "../../components/TelefonKnapp.astro";
import EpostKnapp from "../../components/EpostKnapp.astro";
import { marked } from 'marked'; // Installer med: npm install marked

export async function getStaticPaths() {
    const tjenester = await getCollection('tjenester');
    return tjenester.map(entry => ({
        params: {id: entry.id},
        props: {entry, tjenester}, // Vi sender 'entry' her
    }));
}

const { entry, tjenester } = Astro.props; // Hent 'entry' (ikke tjeneste)
const { title, ingress, body } = entry.data; // Bruk entry.data

// 1. "Vask" teksten: Fjern uønskede tegn og normaliser linjeskift
const cleanBody = body
    .replace(/\\n/g, '\n') // Gjør bokstavelige \n om til faktiske linjeskift
    .trim();

// 2. Konfigurer marked til å være streng på lister og overskrifter
const htmlContent = await marked.parse(cleanBody, {
    gfm: true,        // GitHub Flavored Markdown
    breaks: true,     // Gjør enkle linjeskift til <br>
    headerIds: true,
    mangle: false,
    headerPrefix: 'header-'
});
---
<Layout title={`${entry.data.title} | Tenner og Trivsel`}>
    {/* 1. Vi fjerner 'flex' fra denne ytre diven for å unngå at den krymper innholdet */}
    <div class="flex-grow bg-white w-full">

        <section class="pt-12 md:pt-20 pb-0">
            <div class="container mx-auto px-4 w-full">
                {/* 1. Nav */}
                <nav class="mb-8 text-sm text-gray-500">
                    <a href="/" class="hover:text-blue-600">Forside</a>
                    <span class="mx-2">/</span>
                    <span class="text-gray-900">{entry.data.title}</span>
                </nav>

                {/* 2. Flex-oppsett for innhold og boks */}
                <div class="flex flex-wrap xl:flex-nowrap gap-12 items-start">

                    {/* Venstre side: Bruker flex-1 for å ta all ledig plass */}
                    <div class="flex-1 prose prose-slate max-w-none">
                        <header class="mb-12 not-prose"> {/* not-prose hindrer doble marginer fra tailwind typography */}
                            <h1 class="text-4xl md:text-5xl font-bold text-slate-900 mb-6 leading-tight">
                                {entry.data.title}
                            </h1>
                            <p class="text-xl text-slate-600 leading-relaxed font-light italic">
                                {entry.data.ingress}
                            </p>
                        </header>

                        <div class="markdown-content">
                            <span set:html={htmlContent}></span>
                        </div>
                    </div>

                    <style>
                        @reference "../../styles/global.css"; /* Peker til der du har @theme eller @tailwind */

                        .markdown-content :global(h2) {
                            @apply text-3xl font-bold text-slate-900 mt-10 mb-4;
                        }

                        .markdown-content :global(h3) {
                            @apply text-2xl font-semibold text-slate-800 mt-8 mb-3;
                        }

                        .markdown-content :global(p) {
                            @apply text-lg text-slate-700 leading-relaxed mb-6;
                        }

                        .markdown-content :global(ul) {
                            @apply list-disc list-outside mb-8 ml-6 space-y-2 text-slate-700;
                        }

                        .markdown-content :global(ol) {
                            @apply list-decimal list-outside mb-8 ml-6 space-y-2 text-slate-700;
                        }

                        .markdown-content :global(li) {
                            @apply pl-2;
                        }

                        .markdown-content :global(strong) {
                            @apply font-bold text-slate-900;
                        }

                        .markdown-content :global(em) {
                            @apply italic;
                        }

                        /* Styling for lenker i teksten */
                        .markdown-content :global(a) {
                            @apply text-blue-600 underline hover:text-blue-800 transition-colors;
                        }
                    </style>

                    {/* Høyre side: Fast bredde på desktop, full bredde på mobil */}
                    <aside class="w-full lg:w-80 xl:w-96 lg:sticky lg:top-24 min-w-fit">
                        <div class="p-8 bg-blue-50 rounded-2xl border border-blue-100 shadow-sm flex flex-col gap-4">
                            <h3 class="text-blue-900 font-bold text-lg leading-snug">
                                Ta kontakt med oss for mer informasjon
                            </h3>
                            <div class="flex flex-col gap-3">
                                <TelefonKnapp/>
                                <EpostKnapp/>
                            </div>
                            <hr class="border-blue-200 my-2" />
                            <a href="/#kontakt"
                               class="text-center bg-blue-600 text-white px-6 py-3 rounded-xl font-medium hover:bg-blue-700 transition shadow-md">
                                Gå til kontakt
                            </a>
                        </div>
                    </aside>
                </div>

                {/* Sorterte tjenester */}
                <div class="mt-20 mb-24 border-t pt-10">
                    <h4 class="font-bold mb-6 text-slate-900 text-lg uppercase tracking-wide text-sm opacity-50">Våre tjenester</h4>
                    <ul class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-x-8 gap-y-3">
                        {tjenester
                            .sort((a, b) => a.data.title.localeCompare(b.data.title, 'nb'))
                            .map(s => {
                                const isCurrent = s.id === entry.id;
                                return (
                                        <li class="flex items-center gap-2 py-1">
                                            <span class={isCurrent ? "text-blue-600 font-bold" : "text-slate-300"}>→</span>
                                            {isCurrent ? (
                                                    <span class="text-sm font-bold text-slate-900">{s.data.title}</span>
                                            ) : (
                                                    <a href={`/tjenester/${s.id}`} class="text-sm font-medium text-blue-600 hover:text-blue-800 hover:underline">
                                                        {s.data.title}
                                                    </a>
                                            )}
                                        </li>
                                );
                            })
                        }
                    </ul>
                </div>
            </div>
        </section>
    </div>
</Layout>