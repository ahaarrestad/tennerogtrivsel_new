            if (!inner || !actions) return;

            actions.innerHTML = `
                <button onclick="window.openTannlegerModule()" class="admin-btn-secondary text-xs py-2 px-4 shadow-md flex items-center gap-2">
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
                    Tilbake til liste
                </button>
            `;
            inner.innerHTML = '<div class="text-slate-500 italic text-sm animate-pulse">Henter profil og bilde fra Google...</div>';

            const t = data || { name: '', title: '', description: '', image: '', active: true, scale: 1.0, positionX: 50, positionY: 50 };
            
            // Hent bilde-URL (blob) for preview
            let previewSrc = '';
            let currentImageId = null;

            if (t.image) {
                console.log("[Admin] Forsøker å hente preview for bilde:", t.image);
                try {
                    // Hvis det ser ut som en ID (lang streng uten filendelse-liknende mønster)
                    if (t.image.length > 20 && !t.image.includes('.')) {
                        currentImageId = t.image;
                    } else {
                        // Søk etter filID basert på navn
                        const file = await findFileByName(t.image, TANNLEGER_FOLDER);
                        if (file) {
                            currentImageId = file.id;
                            console.log("[Admin] Fant fil-ID for bilde:", currentImageId);
                        } else {
                            console.warn("[Admin] Fant ikke bilde på Drive ved navn:", t.image);
                        }
                    }

                    if (currentImageId) {
                        const blobUrl = await getDriveImageBlob(currentImageId);
                        if (blobUrl) previewSrc = blobUrl;
                    }
                } catch (err) {
                    console.warn("[Admin] Kunne ikke hente bilde-preview fra Drive:", err);
                }

                // FALLBACK: Hvis Drive-preview feilet, men vi har et filnavn, prøv å vis det lokale (synkede) bildet
                if (!previewSrc && t.image && t.image.includes('.')) {
                    console.log("[Admin] Bruker lokal fallback for preview:", t.image);
                    previewSrc = `/src/assets/tannleger/${t.image}`;
                }
            }

            inner.innerHTML = `
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl animate-in fade-in slide-in-from-bottom-2 duration-300">
                    <!-- VENSTRE: Skjema -->
