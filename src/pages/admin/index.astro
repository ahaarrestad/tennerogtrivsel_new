                const title = document.getElementById('edit-t-title').value;
                const desc = document.getElementById('edit-t-desc').value;
                const image = document.getElementById('edit-t-image').value;
                const scale = document.getElementById('edit-t-scale').value;
                const posX = document.getElementById('edit-t-x').value;
                const posY = document.getElementById('edit-t-y').value;
                const active = document.getElementById('edit-t-active').checked;

                document.getElementById('preview-name').textContent = name || 'Navn';
                document.getElementById('preview-title').textContent = title || 'Tittel';
                document.getElementById('preview-desc').textContent = desc || 'Beskrivelse kommer her...';
                
