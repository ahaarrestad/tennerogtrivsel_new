---
// src/pages/admin/index.astro
import '../../styles/global.css';
import { Image } from "astro:assets";
import logoImage from "../../assets/logo.png";

const TJENESTER_FOLDER = import.meta.env.PUBLIC_GOOGLE_DRIVE_TJENESTER_FOLDER_ID;
const TANNLEGER_FOLDER = import.meta.env.PUBLIC_GOOGLE_DRIVE_TANNLEGER_FOLDER_ID;
const MELDINGER_FOLDER = import.meta.env.PUBLIC_GOOGLE_DRIVE_MELDINGER_FOLDER_ID;
---
<!doctype html>
<html lang="no" class="h-full bg-slate-50">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width"/>
    <title>Admin | Tenner og Trivsel</title>
    <script src="https://apis.google.com/js/api.js" async defer></script>
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    
    <!-- Editor & Datepicker assets -->
    <link rel="stylesheet" href="https://unpkg.com/easymde/dist/easymde.min.css">
    <script src="https://unpkg.com/easymde/dist/easymde.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/no.js"></script>
    
    <!-- Icons for EasyMDE -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style is:global>
        .EasyMDEContainer .editor-toolbar {
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
            border-color: #e2e8f0;
            background: #f8fafc;
        }
        .EasyMDEContainer .CodeMirror {
            border-bottom-left-radius: 12px;
            border-bottom-right-radius: 12px;
            border-color: #e2e8f0;
            font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        }
        .EasyMDEContainer .editor-preview-active-side {
            border-color: #e2e8f0;
        }
    </style>
</head>
<body class="admin-layout">

    <!-- ADMIN NAVIGASJON -->
    <nav class="admin-nav">
        <div class="admin-nav-container">
            <!-- VENSTRE: Logo & Admin-tittel -->
            <a href="/" class="admin-logo-container group">
                <Image
                        src={logoImage}
                        alt="Tenner og Trivsel"
                        width={128}
                        class="h-10 sm:h-12 w-auto object-contain shrink-0"
                        loading="eager"
                />
                <div class="flex flex-col justify-center leading-none whitespace-nowrap overflow-hidden">
                    <span class="text-base sm:text-xl font-black uppercase tracking-tighter text-brand">Admin</span>
                    <span class="hidden xs:inline text-[9px] font-bold text-slate-500 uppercase tracking-widest truncate">Tenner & Trivsel</span>
                </div>
            </a>

            <!-- HØYRE: Bruker-info & Hjem-link -->
            <div class="flex items-center gap-2 sm:gap-6 shrink-0">
                <button id="user-pill" 
                        title="Klikk for å logge ut"
                        style="display: none;"
                        class="admin-user-pill group cursor-pointer whitespace-nowrap">
                    <span id="nav-user-info" class="text-[10px] sm:text-sm font-bold text-brand truncate max-w-[60px] xs:max-w-[100px] sm:max-w-none min-w-0 pointer-events-none"></span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" class="text-slate-400 group-hover:text-brand shrink-0 pointer-events-none ml-1"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg>
                </button>
                
                <a href="/" class="text-brand font-black flex flex-row flex-nowrap items-center gap-1 hover:text-brand-hover transition-colors text-[10px] sm:text-sm shrink-0 whitespace-nowrap">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="shrink-0"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                    <span class="hidden sm:inline uppercase tracking-wider">Hjem</span>
                </a>
            </div>
        </div>
    </nav>

    <main class="flex-grow flex flex-col items-center justify-center p-4">
        <!-- LOGIN CONTAINER -->
        <div id="login-container" class="admin-login-box">
            <div class="space-y-4">
                <div class="admin-login-icon-box">
                    <Image src={logoImage} alt="" width={64} class="w-12 h-12 object-contain" />
                </div>
                <h1 class="admin-title">Velkommen</h1>
                <p class="text-slate-600">Logg inn for å administrere innholdet på nettsiden.</p>
            </div>
            
            <button id="login-btn" class="btn-primary w-full py-4 flex items-center justify-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 48 48">
                    <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12c0-6.627,5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24s8.955,20,20,20s20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z"/>
                    <path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z"/>
                    <path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z"/>
                    <path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z"/>
                </svg>
                Logg inn med Google
            </button>
        </div>

        <!-- DASHBOARD CONTAINER -->
        <div id="dashboard" class="hidden admin-dashboard-container">
            <header class="admin-card-header">
                <h1 class="admin-title">Admin Dashboard</h1>
                <p class="admin-info-text">Velg en modul nedenfor for å gjøre endringer.</p>
            </header>

            <div class="admin-module-grid">
                <div class="admin-card-interactive group">
                    <h2 class="admin-subtitle group-hover:text-brand-hover">Innstillinger</h2>
                    <p class="admin-description">Administrer telefonnumre, åpningstider og nettsidetitler.</p>
                    <button id="btn-open-settings" class="btn-primary w-full mt-auto">Åpne editor</button>
                </div>
                <div class="admin-card-interactive group">
                    <h2 class="admin-subtitle group-hover:text-brand-hover">Tjenester</h2>
                    <p class="admin-description">Rediger tekst og innhold for alle tannhelsetjenester.</p>
                    <button id="btn-open-tjenester" class="btn-primary w-full mt-auto">Åpne editor</button>
                </div>
                <div class="admin-card-interactive group">
                    <h2 class="admin-subtitle group-hover:text-brand-hover">Meldinger</h2>
                    <p class="admin-description">Lag og administrer aktive meldinger og infobannere.</p>
                    <button id="btn-open-meldinger" class="btn-primary w-full mt-auto">Åpne editor</button>
                </div>
                <div class="admin-card-interactive group">
                    <h2 class="admin-subtitle group-hover:text-brand-hover">Tannleger</h2>
                    <p class="admin-description">Oppdater informasjon om ansatte og last opp nye portretter.</p>
                    <button id="btn-open-tannleger" class="btn-primary w-full mt-auto">Åpne editor</button>
                </div>
            </div>
        </div>

        <!-- MODUL-SEKSJONER -->
        <div id="module-container" class="hidden admin-dashboard-container">
            <div class="flex justify-between items-center">
                <button id="back-to-dashboard" class="text-brand font-bold flex items-center gap-2 hover:text-brand-hover transition-colors uppercase tracking-wider text-xs">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="19" cy1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>
                    Tilbake
                </button>
                <div id="module-actions"></div>
            </div>
            
            <div id="module-content" class="admin-card min-h-[500px]">
                <h2 id="module-title" class="admin-title !mb-8 border-b border-brand-light pb-6">Modulnavn</h2>
                <div id="module-inner">
                    <div class="flex items-center gap-3 text-slate-500 text-sm italic">
                        <svg class="animate-spin h-5 w-5" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
                        Laster innhold...
                    </div>
                </div>
            </div>
        </div>
    </main>

    <div id="admin-config" 
         data-tjenester-folder={TJENESTER_FOLDER} 
         data-tannleger-folder={TANNLEGER_FOLDER} 
         data-meldinger-folder={MELDINGER_FOLDER}
         data-sheet-id={import.meta.env.PUBLIC_GOOGLE_SHEET_ID}
         class="hidden"></div>

    <script>
        import { 
            initGapi, initGis, login, logout, checkAccess, tryRestoreSession, 
            silentLogin, getStoredUser, getSettingsWithNotes, updateSettings,
            listFiles, getFileContent, saveFile, createFile, deleteFile,
            parseMarkdown, stringifyMarkdown
        } from '../../scripts/admin-client.js';
        import { formatDate, stripStackEditData, sortMessages, slugify } from '../../scripts/textFormatter.js';
        import { 
            updateUIWithUser, autoResizeTextarea, saveSingleSetting, 
            loadMeldingerModule, initEditors, enforceAccessControl,
            loadTjenesterModule, initMarkdownEditor
        } from '../../scripts/admin-dashboard.js';

        const configEl = document.getElementById('admin-config');
        const TJENESTER_FOLDER = configEl?.dataset.tjenesterFolder;
        const TANNLEGER_FOLDER = configEl?.dataset.tannlegerFolder;
        const MELDINGER_FOLDER = configEl?.dataset.meldingerFolder;
        const SHEET_ID = configEl?.dataset.sheetId;

        let currentSettings = [];

        async function loadSettingsModule() {
            const inner = document.getElementById('module-inner');
            if (!inner) return;
            inner.innerHTML = '<div class="text-slate-500 italic text-sm animate-pulse">Henter data...</div>';
            try {
                currentSettings = await getSettingsWithNotes(SHEET_ID);
                let html = `<div class="space-y-4 max-w-4xl">`;
                currentSettings.forEach((setting, i) => {
                    const label = setting.description || setting.id;
                    const isLong = (setting.value && setting.value.length > 60) || setting.id.toLowerCase().includes('tekst');
                    html += `
                        <div class="admin-field-container">
                            <div class="flex justify-between items-start gap-4">
                                <label class="admin-label !mb-0">${label}</label>
                                <div id="status-${i}" class="shrink-0 h-5"></div>
                            </div>
                            ${isLong ? 
                                `<textarea id="setting-input-${i}" data-index="${i}" class="setting-field admin-input resize-none overflow-hidden">${setting.value}</textarea>` : 
                                `<input type="text" id="setting-input-${i}" data-index="${i}" value="${setting.value}" class="setting-field admin-input">`
                            }
                        </div>`;
                });
                inner.innerHTML = html + `</div>`;
                document.querySelectorAll('.setting-field').forEach(input => {
                    if (input.tagName === 'TEXTAREA') { 
                        autoResizeTextarea(input); 
                        input.addEventListener('input', (e) => autoResizeTextarea(e.target)); 
                    }
                    input.addEventListener('blur', (e) => saveSingleSetting(e.target.dataset.index, e.target, currentSettings, SHEET_ID));
                });
            } catch (e) { 
                console.error("Settings load failed", e);
                inner.innerHTML = `<div class="admin-alert-error">❌ Kunne ikke laste innstillinger.</div>`; 
            }
        }

        // --- TJENESTER MODUL ---
        window.deleteTjeneste = async (id, name) => {
            if (confirm(`Vil du slette tjenesten "${name}"?`)) {
                try { 
                    await deleteFile(id); 
                    loadTjenesterModule(TJENESTER_FOLDER, window.editTjeneste, window.deleteTjeneste); 
                } catch (e) { alert("Sletting feilet."); }
            }
        };

        window.editTjeneste = async (id, name) => {
            const inner = document.getElementById('module-inner');
            const actions = document.getElementById('module-actions');
            if (!inner || !actions) return;

            actions.innerHTML = '';
            inner.innerHTML = '<div class="text-slate-500 italic text-sm animate-pulse">Laster editor...</div>';
            
            try {
                let data = { title: '', ingress: '', id: '' };
                let body = '';

                if (id) {
                    const raw = await getFileContent(id);
                    const parsed = parseMarkdown(raw);
                    data = parsed.data;
                    body = stripStackEditData(parsed.body);
                }

                inner.innerHTML = `
                    <div class="space-y-6 max-w-3xl animate-in fade-in slide-in-from-bottom-2 duration-300">
                        <div class="grid grid-cols-1 gap-6">
                            <div class="flex flex-col gap-2">
                                <label class="admin-label">Tittel</label>
                                <input type="text" id="edit-title" value="${data.title || ''}" placeholder="Navn på tjenesten..." class="admin-input">
                            </div>
                            <div class="flex flex-col gap-2">
                                <label class="admin-label">Ingress (kort sammendrag)</label>
                                <textarea id="edit-ingress" rows="3" class="admin-input resize-none">${data.ingress || ''}</textarea>
                            </div>
                            <div class="flex flex-col gap-2 editor-container">
                                <label class="admin-label">Beskrivelse (Innhold)</label>
                                <textarea id="edit-content" placeholder="Full beskrivelse her...">${body}</textarea>
                            </div>
                        </div>
                        <div class="flex flex-col sm:flex-row gap-3 pt-4 border-t border-slate-100">
                            <button id="btn-save-tjeneste" class="btn-primary py-4 px-8 shadow-xl uppercase font-black tracking-widest text-xs">Lagre tjeneste</button>
                            <button onclick="window.loadTjenesterModule()" class="admin-btn-secondary !py-4 !px-8 !rounded-2xl uppercase tracking-widest text-xs">Avbryt</button>
                        </div>
                    </div>`;

                const onSave = async (easyMDE) => {
                    const title = document.getElementById('edit-title').value;
                    const safeTitle = slugify(title) || 'u-navngitt-tjeneste';
                    const entryId = data.id || safeTitle; 
                    const newFileName = `${safeTitle}-${Date.now()}.md`;
                    const saveBtn = document.getElementById('btn-save-tjeneste');

                    saveBtn.disabled = true;
                    saveBtn.textContent = "Lagrer...";
                    
                    const frontmatter = {
                        id: entryId,
                        title: title,
                        ingress: document.getElementById('edit-ingress').value
                    };
                    
                    const content = easyMDE ? easyMDE.value() : document.getElementById('edit-content').value;
                    
                    try {
                        if (id) await saveFile(id, newFileName, stringifyMarkdown(frontmatter, content));
                        else await createFile(TJENESTER_FOLDER, newFileName, stringifyMarkdown(frontmatter, content));
                        window.loadTjenesterModule();
                    } catch (e) { 
                        console.error("Lagring feilet:", e);
                        alert("Feil ved lagring."); 
                        saveBtn.disabled = false;
                        saveBtn.textContent = "Lagre tjeneste"; 
                    }
                };

                initMarkdownEditor(onSave);
            } catch (e) {
                console.error("Klarte ikke laste editor:", e);
                inner.innerHTML = `<div class="admin-alert-error">❌ En feil oppstod under lasting av editoren. Sjekk konsollen for detaljer.</div>`;
            }
        };

        window.loadTjenesterModule = () => loadTjenesterModule(TJENESTER_FOLDER, window.editTjeneste, window.deleteTjeneste);

        // --- MELDINGER MODUL ---

        window.deleteMelding = async (id, name) => {
            if (confirm(`Vil du slette "${name}"?`)) {
                try { 
                    await deleteFile(id); 
                    window.loadMeldingerModule(); 
                } catch (e) { alert("Sletting feilet."); }
            }
        };

        window.editMelding = async (id, name) => {
            const inner = document.getElementById('module-inner');
            const actions = document.getElementById('module-actions');
            if (!inner || !actions) return;

            actions.innerHTML = '';
            inner.innerHTML = '<div class="text-slate-500 italic text-sm animate-pulse">Laster editor...</div>';
            
            try {
                let msgData = { title: '', startDate: new Date().toISOString().split('T')[0], endDate: '', content: '' };

                if (id) {
                    const raw = await getFileContent(id);
                    const { data, body } = parseMarkdown(raw);
                    msgData = { ...data, content: stripStackEditData(body) };
                }

                inner.innerHTML = `
                    <div class="space-y-6 max-w-3xl animate-in fade-in slide-in-from-bottom-2 duration-300">
                        <div class="grid grid-cols-1 gap-6">
                            <div class="flex flex-col gap-2">
                                <label class="admin-label">Tittel</label>
                                <input type="text" id="edit-title" value="${msgData.title || ''}" placeholder="Skriv en tittel..." class="admin-input">
                            </div>
                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                                <div class="flex flex-col gap-2">
                                    <div class="flex justify-between items-center">
                                        <label class="admin-label">Fra og med</label>
                                        <span id="preview-start" class="text-[10px] text-slate-400 font-bold">${formatDate(msgData.startDate)}</span>
                                    </div>
                                    <input type="text" id="edit-start" value="${msgData.startDate || ''}" placeholder="Velg dato..." class="admin-input cursor-pointer bg-white">
                                </div>
                                <div class="flex flex-col gap-2">
                                    <div class="flex justify-between items-center">
                                        <label class="admin-label">Til og med</label>
                                        <span id="preview-end" class="text-[10px] text-slate-400 font-bold">${formatDate(msgData.endDate)}</span>
                                    </div>
                                    <input type="text" id="edit-end" value="${msgData.endDate || ''}" placeholder="Velg dato..." class="admin-input cursor-pointer bg-white">
                                </div>
                            </div>
                            <div class="flex flex-col gap-2 editor-container">
                                <label class="admin-label">Innhold</label>
                                <textarea id="edit-content" placeholder="Skriv meldingen her...">${msgData.content || ''}</textarea>
                            </div>
                        </div>
                        <div class="flex flex-col sm:flex-row gap-3 pt-4 border-t border-slate-100">
                            <button id="btn-save-melding" class="btn-primary py-4 px-8 shadow-xl uppercase font-black tracking-widest text-xs">Lagre melding</button>
                            <button onclick="window.loadMeldingerModule()" class="admin-btn-secondary !py-4 !px-8 !rounded-2xl uppercase tracking-widest text-xs">Avbryt</button>
                        </div>
                    </div>`;

                const onDateChange = () => {
                    const startInp = document.getElementById('edit-start');
                    const endInp = document.getElementById('edit-end');
                    const startEl = document.getElementById('preview-start');
                    const endEl = document.getElementById('preview-end');
                    if (startEl && startInp) startEl.textContent = formatDate(startInp.value);
                    if (endEl && endInp) endEl.textContent = formatDate(endInp.value);
                };

                const onSave = async (easyMDE) => {
                    const title = document.getElementById('edit-title').value;
                    const safeTitle = slugify(title) || 'u-navnet';
                    const newFileName = `${safeTitle}-${Date.now()}.md`;
                    const saveBtn = document.getElementById('btn-save-melding');

                    saveBtn.disabled = true;
                    saveBtn.textContent = "Lagrer...";
                    
                    const data = {
                        title: title,
                        startDate: document.getElementById('edit-start').value,
                        endDate: document.getElementById('edit-end').value
                    };
                    
                    const body = easyMDE ? easyMDE.value() : document.getElementById('edit-content').value;
                    
                    try {
                        if (id) await saveFile(id, newFileName, stringifyMarkdown(data, body));
                        else await createFile(MELDINGER_FOLDER, newFileName, stringifyMarkdown(data, body));
                        window.loadMeldingerModule();
                    } catch (e) { 
                        console.error("Lagring feilet:", e);
                        alert("Feil ved lagring."); 
                        saveBtn.disabled = false;
                        saveBtn.textContent = "Lagre melding"; 
                    }
                };

                initEditors(onDateChange, onSave);
            } catch (e) {
                console.error("Klarte ikke laste editor:", e);
                inner.innerHTML = `<div class="admin-alert-error">❌ En feil oppstod under lasting av editoren. Sjekk konsollen for detaljer.</div>`;
            }
        };
        
        window.loadMeldingerModule = () => loadMeldingerModule(MELDINGER_FOLDER, window.editMelding, window.deleteMelding);

        function openModule(id, title) {
            document.getElementById('dashboard').classList.add('hidden');
            document.getElementById('module-container').classList.remove('hidden');
            document.getElementById('module-title').textContent = title;
            document.getElementById('module-actions').innerHTML = '';
            if (id === 'settings') loadSettingsModule();
            else if (id === 'meldinger') window.loadMeldingerModule();
            else if (id === 'tjenester') window.loadTjenesterModule();
            else document.getElementById('module-inner').innerHTML = `<p class="text-slate-600 italic">Denne modulen er under utvikling.</p>`;
        }

        function closeModule() {
            document.getElementById('dashboard').classList.remove('hidden');
            document.getElementById('module-container').classList.add('hidden');
        }

        async function handleAuth(userInfo = null) {
            const user = userInfo || getStoredUser();
            if (user) {
                updateUIWithUser(user);
                await enforceAccessControl({
                    SHEET_ID,
                    TJENESTER_FOLDER,
                    MELDINGER_FOLDER,
                    TANNLEGER_FOLDER
                });
            }
        }

        const setup = async () => {
            try {
                // 1. Initialiser GAPI først (Drive/Sheets APIer)
                const gapiSuccess = await initGapi();
                if (gapiSuccess) tryRestoreSession();

                // 2. Initialiser GIS og koble til handleAuth
                initGis(handleAuth);

                // 3. Sjekk om vi allerede har en lagret bruker
                const user = getStoredUser();
                if (user) {
                    await handleAuth(user);
                } else {
                    // Prøv stille innlogging hvis ingen bruker er lagret
                    silentLogin();
                }

                document.getElementById('login-btn').onclick = login;
                document.getElementById('user-pill').onclick = () => { if (confirm("Logge ut?")) { logout(); location.reload(); } };
                document.getElementById('back-to-dashboard').onclick = closeModule;
                document.getElementById('btn-open-settings').onclick = () => openModule('settings', 'Innstillinger');
                document.getElementById('btn-open-tjenester').onclick = () => openModule('tjenester', 'Tjenester');
                document.getElementById('btn-open-meldinger').onclick = () => openModule('meldinger', 'Meldinger');
                document.getElementById('btn-open-tannleger').onclick = () => openModule('tannleger', 'Tannleger');
            } catch (err) { console.error("[Admin] Kritisk feil under oppstart:", err); }
        };
        if (document.readyState === 'complete') setup();
