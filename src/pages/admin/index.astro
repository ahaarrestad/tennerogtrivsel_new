                if (el.type === 'text' || el.tagName === 'TEXTAREA') {
                    el.addEventListener('input', updatePreview);
                }
            });
        };
        window.openTannlegerModule = () => loadTannlegerModule(SHEET_ID, window.editTannlege, window.deleteTannlege);

