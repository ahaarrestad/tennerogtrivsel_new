---
// src/pages/admin/index.astro
import '../../styles/global.css';
import { Image } from "astro:assets";
import logoImage from "../../assets/logo.png";

const TJENESTER_FOLDER = import.meta.env.PUBLIC_GOOGLE_DRIVE_TJENESTER_FOLDER_ID;
const TANNLEGER_FOLDER = import.meta.env.PUBLIC_GOOGLE_DRIVE_TANNLEGER_FOLDER_ID;
const MELDINGER_FOLDER = import.meta.env.PUBLIC_GOOGLE_DRIVE_MELDINGER_FOLDER_ID;
---
<!doctype html>
<html lang="no" class="h-full bg-slate-50">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width"/>
    <title>Admin | Tenner og Trivsel</title>
    <script src="https://apis.google.com/js/api.js" async defer></script>
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    
    <!-- Editor & Datepicker assets -->
    <link rel="stylesheet" href="https://unpkg.com/easymde/dist/easymde.min.css">
    <script src="https://unpkg.com/easymde/dist/easymde.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/no.js"></script>
    
    <!-- Icons for EasyMDE -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style is:global>
        .EasyMDEContainer .editor-toolbar {
            border-top-left-radius: 12px;
            border-top-right-radius: 12px;
            border-color: #e2e8f0;
            background: #f8fafc;
        }
        .EasyMDEContainer .CodeMirror {
            border-bottom-left-radius: 12px;
            border-bottom-right-radius: 12px;
            border-color: #e2e8f0;
            font-family: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, "Liberation Mono", "Courier New", monospace;
        }
        .EasyMDEContainer .editor-preview-active-side {
            border-color: #e2e8f0;
        }
    </style>
</head>
<body class="admin-layout">

    <!-- ADMIN NAVIGASJON -->
    <nav class="admin-nav">
        <div class="admin-nav-container">
            <!-- VENSTRE: Logo & Admin-tittel -->
            <a href="/" class="admin-logo-container group">
                <Image
                        src={logoImage}
                        alt="Tenner og Trivsel"
                        width={128}
                        class="h-10 sm:h-12 w-auto object-contain shrink-0"
                        loading="eager"
                />
                <div class="flex flex-col justify-center leading-none whitespace-nowrap overflow-hidden">
                    <span class="text-base sm:text-xl font-black uppercase tracking-tighter text-brand">Admin</span>
                    <span class="hidden xs:inline text-[9px] font-bold text-slate-500 uppercase tracking-widest truncate">Tenner & Trivsel</span>
                </div>
            </a>

            <!-- HØYRE: Bruker-info & Hjem-link -->
            <div class="flex items-center gap-2 sm:gap-6 shrink-0">
                <button id="user-pill" 
                        title="Klikk for å logge ut"
                        style="display: none;"
                        class="admin-user-pill group cursor-pointer whitespace-nowrap">
                    <span id="nav-user-info" class="text-[10px] sm:text-sm font-bold text-brand truncate max-w-[60px] xs:max-w-[100px] sm:max-w-none min-w-0 pointer-events-none"></span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" class="text-slate-400 group-hover:text-brand shrink-0 pointer-events-none ml-1"><path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path><polyline points="16 17 21 12 16 7"></polyline><line x1="21" y1="12" x2="9" y2="12"></line></svg>
                </button>
                
                <a href="/" class="text-brand font-black flex flex-row flex-nowrap items-center gap-1 hover:text-brand-hover transition-colors text-[10px] sm:text-sm shrink-0 whitespace-nowrap">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" class="shrink-0"><path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path><polyline points="9 22 9 12 15 12 15 22"></polyline></svg>
                    <span class="hidden sm:inline uppercase tracking-wider">Hjem</span>
                </a>
            </div>
        </div>
    </nav>

    <main class="flex-grow flex flex-col items-center justify-center p-4">
        <!-- LOGIN CONTAINER -->
        <div id="login-container" class="admin-login-box">
            <div class="space-y-4">
                <div class="admin-login-icon-box">
                    <Image src={logoImage} alt="" width={64} class="w-12 h-12 object-contain" />
                </div>
                <h1 class="admin-title">Velkommen</h1>
                <p class="text-slate-600">Logg inn for å administrere innholdet på nettsiden.</p>
            </div>
            
            <button id="login-btn" class="btn-primary w-full py-4 flex items-center justify-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 48 48">
                    <path fill="#FFC107" d="M43.611,20.083H42V20H24v8h11.303c-1.649,4.657-6.08,8-11.303,8c-6.627,0-12-5.373-12-12c0-6.627,5.373-12,12-12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C12.955,4,4,12.955,4,24s8.955,20,20,20s20-8.955,20-20C44,22.659,43.862,21.35,43.611,20.083z"/>
                    <path fill="#FF3D00" d="M6.306,14.691l6.571,4.819C14.655,15.108,18.961,12,24,12c3.059,0,5.842,1.154,7.961,3.039l5.657-5.657C34.046,6.053,29.268,4,24,4C16.318,4,9.656,8.337,6.306,14.691z"/>
                    <path fill="#4CAF50" d="M24,44c5.166,0,9.86-1.977,13.409-5.192l-6.19-5.238C29.211,35.091,26.715,36,24,36c-5.202,0-9.619-3.317-11.283-7.946l-6.522,5.025C9.505,39.556,16.227,44,24,44z"/>
                    <path fill="#1976D2" d="M43.611,20.083H42V20H24v8h11.303c-0.792,2.237-2.231,4.166-4.087,5.571c0.001-0.001,0.002-0.001,0.003-0.002l6.19,5.238C36.971,39.205,44,34,44,24C44,22.659,43.862,21.35,43.611,20.083z"/>
                </svg>
                Logg inn med Google
            </button>
        </div>

        <!-- DASHBOARD CONTAINER -->
        <div id="dashboard" class="hidden admin-dashboard-container">
            <header class="admin-card-header">
                <h1 class="admin-title">Behandlingsrommet</h1>
                <p class="admin-info-text">Her pleier vi innholdet slik at nettsiden alltid viser seg fra sin beste side.</p>
            </header>

            <div class="admin-module-grid">
                <div id="card-settings" class="admin-card-interactive group">
                    <h2 class="admin-subtitle group-hover:text-brand-hover">Ta en rutinesjekk</h2>
                    <p class="admin-description">Administrer telefonnumre, åpningstider og nettsidetitler.</p>
                    <button id="btn-open-settings" class="btn-primary w-full mt-auto">Start behandlingen</button>
                </div>
                <div id="card-tjenester" class="admin-card-interactive group">
                    <h2 class="admin-subtitle group-hover:text-brand-hover">Finpuss behandlingene</h2>
                    <p class="admin-description">Rediger tekst og innhold for alle tannhelsetjenester.</p>
                    <button id="btn-open-tjenester" class="btn-primary w-full mt-auto">Start behandlingen</button>
                </div>
                <div id="card-meldinger" class="admin-card-interactive group">
                    <h2 class="admin-subtitle group-hover:text-brand-hover">Heng opp oppslag</h2>
                    <p class="admin-description">Lag og administrer aktive meldinger og infobannere.</p>
                    <button id="btn-open-meldinger" class="btn-primary w-full mt-auto">Start behandlingen</button>
                </div>
                <div id="card-tannleger" class="admin-card-interactive group">
                    <h2 class="admin-subtitle group-hover:text-brand-hover">Puss på profilene</h2>
                    <p class="admin-description">Oppdater informasjon om ansatte og last opp nye portretter.</p>
                    <button id="btn-open-tannleger" class="btn-primary w-full mt-auto">Start behandlingen</button>
                </div>
                <div id="card-forsidebilde" class="admin-card-interactive group">
                    <h2 class="admin-subtitle group-hover:text-brand-hover">Juster forsidebildet</h2>
                    <p class="admin-description">Last opp nytt bilde til forsiden og juster zoom og utsnitt.</p>
                    <button id="btn-open-forsidebilde" class="btn-primary w-full mt-auto">Start behandlingen</button>
                </div>
            </div>
        </div>

        <!-- MODUL-SEKSJONER -->
        <div id="module-container" class="hidden admin-dashboard-container">
            <div class="flex justify-between items-center">
                <button id="back-to-dashboard" class="text-brand font-bold flex items-center gap-2 hover:text-brand-hover transition-colors uppercase tracking-wider text-xs">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><path d="M19 12H5M12 19l-7-7 7-7"/></svg>
                    Tilbake
                </button>
                <div id="module-actions"></div>
            </div>
            
            <div id="module-content" class="admin-card min-h-[500px]">
                <h2 id="module-title" class="admin-title !mb-8 border-b border-brand-light pb-6">Behandlingsområde</h2>
                <div id="module-inner">
                    <div class="flex items-center gap-3 text-slate-500 text-sm italic">
                        <svg class="animate-spin h-5 w-5" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4" fill="none"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
                        Laster innhold...
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- IMAGE PICKER MODAL -->
    <dialog id="image-picker-modal" class="p-0 rounded-2xl shadow-2xl backdrop:bg-slate-900/50 backdrop:backdrop-blur-sm w-[90vw] max-w-4xl max-h-[85vh]">
        <div class="flex flex-col h-full max-h-[85vh]">
            <div class="p-6 border-b border-slate-100 flex justify-between items-center bg-white sticky top-0 z-10">
                <h3 class="text-lg font-black uppercase tracking-tight text-brand">Velg bilde</h3>
                <button onclick="document.getElementById('image-picker-modal').close()" class="p-2 rounded-lg text-slate-400 hover:text-slate-700 hover:bg-slate-100 transition-colors cursor-pointer" aria-label="Lukk">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                </button>
            </div>
            
            <div class="p-6 bg-slate-50 overflow-y-auto grow">
                <!-- UPLOAD SECTION -->
                <div class="mb-8">
                    <label for="upload-image-input" class="flex flex-col items-center justify-center w-full h-32 border-2 border-slate-300 border-dashed rounded-xl cursor-pointer bg-white hover:bg-slate-50 transition-colors group relative">
                        <div id="upload-preview" class="flex flex-col items-center justify-center pt-5 pb-6 transition-opacity duration-200">
                            <svg class="w-8 h-8 mb-3 text-slate-400 group-hover:text-brand transition-colors" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 16">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 13h3a3 3 0 0 0 0-6h-.025A5.56 5.56 0 0 0 16 6.5 5.5 5.5 0 0 0 5.207 5.021C5.137 5.017 5.071 5 5 5a4 4 0 0 0 0 8h2.167M10 15V6m0 0L8 8m2-2 2 2"/>
                            </svg>
                            <p class="mb-2 text-sm text-slate-500"><span class="font-bold text-brand">Klikk for å laste opp</span> eller dra og slipp</p>
                            <p class="text-xs text-slate-400">JPG, PNG, WEBP (Maks 5MB)</p>
                        </div>
                        <div id="upload-spinner" class="absolute inset-0 flex items-center justify-center bg-white/80 hidden">
                            <svg class="animate-spin h-8 w-8 text-brand" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
                        </div>
                        <input id="upload-image-input" type="file" class="hidden" accept="image/*" />
                    </label>
                </div>

                <!-- GALLERY GRID -->
                <div>
                    <h4 class="text-xs font-black uppercase tracking-widest text-slate-400 mb-4">Bilder på Google Drive</h4>
                    <div id="image-gallery-grid" class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-4">
                        <!-- Bilder lastes inn her via JS -->
                    </div>
                </div>
            </div>
        </div>
    </dialog>

    <div id="admin-config"
         data-tjenester-folder={TJENESTER_FOLDER}
         data-tannleger-folder={TANNLEGER_FOLDER}
         data-meldinger-folder={MELDINGER_FOLDER}
         data-sheet-id={import.meta.env.PUBLIC_GOOGLE_SHEET_ID}
         class="hidden"></div>

    <script>
        import {
            initGapi, initGis, login, logout, tryRestoreSession,
            silentLogin, getStoredUser, getSettingsWithNotes, updateSettings,
            updateSettingByKey, getSheetParentFolder, listFiles, getFileContent,
            saveFile, createFile, deleteFile, parseMarkdown, stringifyMarkdown,
            updateTannlegeRow, addTannlegeRow, deleteTannlegeRowPermanently, getDriveImageBlob,
            findFileByName, backupToSlettetSheet, getTannlegerRaw
        } from '../../scripts/admin-client.js';
        import { loadGallery, setupUploadHandler } from '../../scripts/admin-gallery.js';
        import { formatDate, stripStackEditData, sortMessages, slugify } from '../../scripts/textFormatter.js';
        import {
            updateUIWithUser, autoResizeTextarea, saveSingleSetting,
            loadMeldingerModule, enforceAccessControl,
            loadTjenesterModule, loadTannlegerModule
        } from '../../scripts/admin-dashboard.js';
        import snarkdown from 'snarkdown';
        import DOMPurify from 'dompurify';

        const configEl = document.getElementById('admin-config');
        const TJENESTER_FOLDER = configEl?.dataset.tjenesterFolder;
        const TANNLEGER_FOLDER = configEl?.dataset.tannlegerFolder;
        const MELDINGER_FOLDER = configEl?.dataset.meldingerFolder;
        const SHEET_ID = configEl?.dataset.sheetId;

        async function loadSettingsModule() {
            const inner = document.getElementById('module-inner');
            if (!inner) return;
            inner.innerHTML = '<div class="text-slate-500 italic text-sm animate-pulse">Henter data...</div>';
            try {
                const settings = await getSettingsWithNotes(SHEET_ID);
                let html = `<div class="space-y-4 max-w-4xl">`;
                settings.forEach((setting, i) => {
                    const label = setting.description || setting.id;
                    const isLong = (setting.value && setting.value.length > 60) || setting.id.toLowerCase().includes('tekst');
                    html += `
                        <div class="admin-field-container cursor-pointer" id="setting-container-${i}">
                            <div class="flex justify-between items-start gap-4">
                                <label class="admin-label !mb-0 cursor-pointer">${label}</label>
                                <div id="status-${i}" class="shrink-0 h-5"></div>
                            </div>
                            ${isLong ? 
                                `<textarea id="setting-input-${i}" data-index="${i}" class="setting-field admin-input resize-none overflow-hidden">${setting.value}</textarea>` : 
                                `<input type="text" id="setting-input-${i}" data-index="${i}" value="${setting.value}" class="setting-field admin-input">`
                            }
                        </div>`;
                });
                inner.innerHTML = html + `</div>`;
                document.querySelectorAll('.setting-field').forEach(input => {
                    if (input.tagName === 'TEXTAREA') { 
                        autoResizeTextarea(input); 
                        input.addEventListener('input', (e) => autoResizeTextarea(e.target as HTMLTextAreaElement)); 
                    }
                    input.addEventListener('blur', (e) => saveSingleSetting(parseInt((e.target as any).dataset.index), e.target as HTMLInputElement, settings, SHEET_ID));
                });
                // Legg til klikk-lytter på containere
                settings.forEach((_, i) => {
                    document.getElementById(`setting-container-${i}`)?.addEventListener('click', () => {
                        (document.getElementById(`setting-input-${i}`) as HTMLElement)?.focus();
                    });
                });
            } catch (e) { 
                console.error("Settings load failed", e);
                inner.innerHTML = `<div class="admin-alert-error">❌ Kunne ikke laste innstillinger.</div>`; 
            }
        }

        // --- EDITOR INITIALIZERS ---
        function initMarkdownEditor(onSave) {
            let easyMDE = null;
            const EasyMDEGlobal = (window as any)['EasyMDE'];
            if (typeof EasyMDEGlobal !== 'undefined') {
                easyMDE = new EasyMDEGlobal({
                    element: document.getElementById('edit-content'),
                    spellChecker: false,
                    status: false,
                    minHeight: "350px",
                    placeholder: "Skriv innholdet her...",
                    toolbar: ["bold", "italic", "heading", "|", "quote", "unordered-list", "ordered-list", "|", "link", "image", "|", "preview", "side-by-side", "fullscreen", "|", "guide"],
                    previewRender: (plainText) => {
                        return `<div class="markdown-content prose">${DOMPurify.sanitize(snarkdown(plainText))}</div>`;
                    }
                });
            }
            const saveBtn = document.getElementById('btn-save-tjeneste');
            if (saveBtn) saveBtn.onclick = () => onSave(easyMDE);
            return easyMDE;
        }

        function initEditors(onDateChange, onSave) {
            let easyMDE = null;
            const EasyMDEGlobal = (window as any)['EasyMDE'];
            if (typeof EasyMDEGlobal !== 'undefined') {
                easyMDE = new EasyMDEGlobal({
                    element: document.getElementById('edit-content'),
                    spellChecker: false,
                    status: false,
                    minHeight: "250px",
                    placeholder: "Skriv innholdet her...",
                    toolbar: ["bold", "italic", "heading", "|", "quote", "unordered-list", "ordered-list", "|", "link", "image", "|", "preview", "side-by-side", "fullscreen", "|", "guide"],
                    previewRender: (plainText) => {
                        return `<div class="markdown-content prose">${DOMPurify.sanitize(snarkdown(plainText))}</div>`;
                    }
                });
            }

            const flatpickrGlobal = (window as any)['flatpickr'];
            if (typeof flatpickrGlobal !== 'undefined') {
                const fpConfig = {
                    dateFormat: "Y-m-d",
                    altInput: true,
                    altFormat: "d.m.Y",
                    allowInput: true,
                    onChange: (selectedDates, dateStr, instance) => {
                        instance.element.value = dateStr;
                        if (onDateChange) onDateChange(selectedDates, dateStr, instance);
                    }
                };
                const l10ns = flatpickrGlobal.l10ns;
                const noLocale = l10ns ? (l10ns.no || l10ns.nb || l10ns.Norwegian) : null;
                if (noLocale) (fpConfig as any).locale = noLocale;
                
                flatpickrGlobal("#edit-start", fpConfig);
                flatpickrGlobal("#edit-end", fpConfig);
            }

            const saveBtn = document.getElementById('btn-save-melding');
            if (saveBtn) saveBtn.onclick = () => onSave(easyMDE);
            return easyMDE;
        }

        function showDeletionToast(deletedName: string, recoveryText: string) {
            document.getElementById('deletion-toast')?.remove();
            const toast = document.createElement('div');
            toast.id = 'deletion-toast';
            toast.className = 'fixed bottom-6 right-6 z-50 max-w-sm w-full';
            toast.innerHTML = DOMPurify.sanitize(`
                <div class="bg-white rounded-2xl shadow-2xl border border-slate-100 p-5 animate-in fade-in slide-in-from-bottom-4 duration-300">
                    <div class="flex items-start gap-3">
                        <div class="shrink-0 w-9 h-9 bg-amber-50 rounded-xl flex items-center justify-center text-amber-500">
                            <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a1 1 0 0 1 1-1h4a1 1 0 0 1 1 1v2"></path></svg>
                        </div>
                        <div class="flex-1 min-w-0">
                            <p id="toast-deleted-name" class="font-black text-sm text-slate-800"></p>
                            <p id="toast-recovery-text" class="text-xs text-slate-500 mt-1 leading-relaxed"></p>
                        </div>
                        <button class="toast-close shrink-0 p-1 -mr-1 -mt-1 text-slate-300 hover:text-slate-500 transition-colors cursor-pointer" aria-label="Lukk">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
                        </button>
                    </div>
                </div>
            `);
            const nameEl = toast.querySelector('#toast-deleted-name');
            const recoveryEl = toast.querySelector('#toast-recovery-text');
            if (nameEl) nameEl.textContent = `«${deletedName}» ble slettet`;
            if (recoveryEl) recoveryEl.textContent = recoveryText;
            document.body.appendChild(toast);
            toast.querySelector('.toast-close')?.addEventListener('click', () => toast.remove());
            setTimeout(() => { if (toast.parentNode) toast.remove(); }, 30000);
        }

        // --- TJENESTER MODUL ---
        (window as any).deleteTjeneste = async (id, name) => {
            if (confirm(`Vil du slette tjenesten "${name}"?`)) {
                try {
                    await deleteFile(id);
                    (window as any).loadTjenesterModule();
                    showDeletionToast(name,
                        'Filen er lagt i Google Drive-papirkurven og kan gjenopprettes derfra innen 30 dager. ' +
                        'Gå til drive.google.com → Papirkurv for å gjenopprette.');
                } catch (e) { alert("Sletting feilet."); }
            }
        };

        (window as any).editTjeneste = async (id, name) => {
            const inner = document.getElementById('module-inner');
            const actions = document.getElementById('module-actions');
            if (!inner || !actions) return;

            actions.innerHTML = '';
            inner.innerHTML = '<div class="text-slate-500 italic text-sm animate-pulse">Laster editor...</div>';
            
            try {
                let data = { title: '', ingress: '', id: '' };
                let body = '';

                if (id) {
                    const raw = await getFileContent(id);
                    const parsed = parseMarkdown(raw);
                    data = parsed.data as any;
                    body = stripStackEditData(parsed.body);
                }

                inner.innerHTML = `
