---
import Layout from '../layouts/Layout.astro';
import InfoBanner from '../components/InfoBanner.astro';
import Navbar from '../components/Navbar.astro';

import Forside from '../components/Forside.astro';
import Kontakt from '../components/Kontakt.astro';
import Tjenester from '../components/Tjenester.astro';
import Tannleger from '../components/Tannleger.astro';

import {getActiveMessage} from '../scripts/activeMessage.js';

const activeMessage = getActiveMessage();
---

<Layout title="Tenner og Trivsel | Din Tannlege i Stavanger">

    <InfoBanner message={activeMessage}/>

    {/* Flytter navbar litt ned hvis melding er aktiv */}
    <div class={activeMessage ? "sticky top-[40px] z-50" : "sticky top-0 z-50"}>
        <Navbar message={activeMessage}/>
    </div>

    <main>
        <Forside message={activeMessage} />
        <Kontakt />
        <Tjenester />
        <Tannleger />
    </main>

    <footer class="bg-slate-100 text-slate-500 py-12">
        <div class="container mx-auto px-4 text-center">
            <p class="font-bold text-slate-900 mb-2">Tenner og Trivsel -
                <a href="tel:51529618" class="text-blue-600 hover:underline">51&nbsp;52&nbsp;96&nbsp;18</a> /
                <a href="tel:51536421" class="text-blue-600 hover:underline">51&nbsp;53&nbsp;64&nbsp;21</a> -
                <a href="mailto:resepsjon@tennerogtrivsel.no" class="text-blue-600 hover:underline">resepsjon@tennerogtrivsel.no</a>
            </p>
        </div>
    </footer>
</Layout>