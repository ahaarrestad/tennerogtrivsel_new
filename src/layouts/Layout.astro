---
export interface Props {
    title?: string
}
import Footer from '../components/Footer.astro';
import '../styles/global.css';

import InfoBanner from '../components/InfoBanner.astro';
import Navbar from '../components/Navbar.astro';

const {title} = Astro.props;
---
<!doctype html>
<html lang="no" class="scroll-smooth h-full">
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel"icon" href="/favicon.ico" />
    <title>{title ?? 'Tenner og Trivsel'}</title>
</head>

<body class="text-slate-900 flex flex-col min-h-full">

<InfoBanner/>


<div id="navbar-sticky-wrapper" class="sticky top-0 z-50 transition-all duration-300">
    <Navbar/>
</div>

<main class="flex-grow flex flex-col">
    <slot/>
</main>

<Footer/>

</body>
</html>

